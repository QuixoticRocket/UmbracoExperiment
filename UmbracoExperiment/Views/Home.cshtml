@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}
<div class="blog-header">
    <h1 class="blog-title">Alex's experimental blog</h1>
    <p class="lead blog-description">screwing around with Umbraco and bootstrap.</p>
</div>


@foreach (var item in Model.Content.Children().Take(5))
{
    <a href="@item.Url">
        <div class="blog-post">
            <h2 class="blog-post-title">@item.AsDynamic().blogTitle</h2>
            <p class="blog-post-meta">@item.CreateDate.ToString("dd MMMM yyyy") by <a href="#">@item.CreatorName</a></p>
            <p>
                @{string snippet = item.AsDynamic().content.ToString();
                    <span>@snippet.Truncate(10, "...")</span>
                            <span>@item.AsDynamic().content</span>
                }
            </p>
        </div>
    </a>
                    }
<nav>
    <ul class="pager">
        <li><a href="#">Previous</a></li>
        <li><a href="#">Next</a></li>
    </ul>
</nav>

